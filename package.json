{
  "name": "scottpham.github.io",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "run-p style:watch data:watch html:watch serve",
    "serve": "browser-sync start --server --serveStatic 'build/' --files 'build/' ",
    "html": "mustache data/portfolio.json index.html > build/index.html",
    "html:watch": "chokidar 'index.html' --initial=true -c 'npm run html'",
    "data": "node data/convert.js",
    "data:watch": "chokidar 'data/portfolio.csv' --initial=true -c 'run-s data html'",
    "style": "node-sass --source-map true styles/main.scss build/main.css",
    "style:watch": "npm run style && node-sass -w --source-map true styles/main.scss build/main.css",
    "assets": "rsync assets build/",
    "assets:watch": "chokidar 'assetes/**' -c 'npm run assets'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scottpham/scottpham.github.io.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/scottpham/scottpham.github.io/issues"
  },
  "homepage": "https://github.com/scottpham/scottpham.github.io#readme",
  "devDependencies": {
    "browser-sync": "^2.18.13",
    "chokidar-cli": "^1.2.0",
    "indian-ocean": "^2.0.2",
    "live-server": "^1.2.0",
    "mustache": "^2.3.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1"
  },
  "dependencies": {}
}
